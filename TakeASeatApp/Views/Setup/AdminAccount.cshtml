@{
    Layout = "~/Views/Shared/_LayoutWithoutMap.cshtml";
}

@model TakeASeatApp.ViewModels.AdminAccountSetupViewModel

@{
    ViewBag.Title = "Administrative account";
}

@Html.Raw(ViewBag.AppMessage)
<h1>@ViewBag.Title</h1>
<p class="lead">
    The application will automatically create a built-in <b>Administrator</b> account before proceeding to configuration settings.
</p>

<p>Please provide the following:</p>
<form action="@Url.Action("AdminAccount", "Setup")" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="col-sm-12 form-horizontal">
        @*<div class="form-group">
                <label>Account e-mail</label>
                <input type="text" name="EmailAddress" class="form-control" value="@Model.EmailAddress" placeholder="Example: SysAdmin@email.ro" maxlength="128" />
            </div>
            <div class="form-group">
                <label>Account password</label><span style="margin-left: 1.0em;">Suggestion: <a>@Model.SuggestedPassword</a></span>
                <input type="password" name="Password" value="@Model.Password" class="form-control" placeholder="Password" maxlength="64" />
            </div>
            <div class="form-group">
                <label>Confirm password</label>
                <input type="password" name="PasswordConfirm" value="@Model.PasswordConfirm" class="form-control" placeholder="Confirm Password" maxlength="64"/>
            </div>*@

        <div class="form-group">
            @Html.LabelFor(m => m.EmailAddress, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PasswordConfirm, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <button type="submit" class="btn btn-default">Create account &amp; continue to finish</button>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <script type="text/javascript" src="~/ViewScripts/Setup/AdminAccount.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
